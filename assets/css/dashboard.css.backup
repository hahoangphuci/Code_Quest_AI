body {
  background: #0f172a;
  color: #e2e8f0;
  font-family: "Inter", "Segoe UI", "Roboto", sans-serif;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

/* Header Styles */
.site_header {
  background: #000;
  border-bottom: 1px solid #334155;
  padding: 12px 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.container_header {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
}

.logo_header {
  display: flex;
  align-items: center;
  gap: 12px;
}

.logo_header img {
  height: 48px;
  width: auto;
  cursor: pointer;
  filter: brightness(0) invert(1);
}

.logo_header a {
  color: #fff;
  font-size: 2rem;
  font-weight: 700;
  text-decoration: none;
}

/* Dashboard Navigation */
.dashboard-nav {
  display: flex;
  gap: 20px;
}

.nav-btn {
  background: transparent;
  color: #94a3b8;
  border: none;
  padding: 8px 16px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 500;
  transition: all 0.3s ease;
}

.nav-btn:hover {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
}

.nav-btn.active {
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

/* Main Dashboard */
.dashboard-main {
  max-width: 1200px;
  margin: 32px auto;
  padding: 0 20px;
}

/* Profile Section */
.profile-section {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 18px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.18);
  padding: 24px;
  margin-bottom: 24px;
}

.profile-info {
  display: flex;
  align-items: center;
  gap: 20px;
  flex-wrap: wrap;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 3px solid #667eea;
  background: #fff;
  flex-shrink: 0;
}

.profile-details h2 {
  margin: 0 0 8px 0;
  font-size: 1.5rem;
}

.stats {
  display: flex;
  gap: 20px;
  margin-bottom: 12px;
  flex-wrap: wrap;
}

.stat-item {
  background: rgba(255, 255, 255, 0.1);
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.9rem;
}

.progress-bar {
  width: 200px;
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 12px;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  width: 0%;
  transition: width 0.5s ease;
}

.badge-list {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  align-items: center;
}

.badge {
  background: linear-gradient(135deg, #f59e42, #fbbf24);
  color: #fff;
  font-weight: 600;
  border-radius: 999px;
  padding: 4px 12px;
  font-size: 0.8rem;
  box-shadow: 0 2px 8px rgba(245, 158, 66, 0.12);
  animation: badgePop 0.5s;
}

@keyframes badgePop {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  60% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Language Selection */
.language-section {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 18px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.18);
  padding: 24px;
  margin-bottom: 24px;
  text-align: center;
}

.language-section h3 {
  margin: 0 0 20px 0;
  font-size: 1.3rem;
}

.language-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 12px;
  margin-top: 16px;
}

.lang-btn {
  background: rgba(255, 255, 255, 0.06);
  color: #e2e8f0;
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 16px 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.lang-btn:hover {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  transform: translateY(-2px);
}

.lang-btn.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.2);
  color: #667eea;
}

.lang-icon {
  font-size: 2rem;
}

.lang-name {
  font-weight: 600;
  font-size: 1rem;
}

.lang-level {
  font-size: 0.8rem;
  color: #94a3b8;
}

.language-info {
  margin-top: 16px;
  padding: 12px;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8px;
  color: #667eea;
  font-weight: 600;
}

/* Content Sections */
.content-section {
  display: none;
  background: rgba(255, 255, 255, 0.04);
  border-radius: 18px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.18);
  padding: 24px;
  margin-bottom: 24px;
}

.content-section.active {
  display: block;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  flex-wrap: wrap;
  gap: 16px;
}

.section-header h3 {
  margin: 0;
  font-size: 1.4rem;
}

/* Learning Section */
.learning-content {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 24px;
}

.topic-list {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  padding: 16px;
}

.topic-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 8px;
}

.topic-item:hover {
  background: rgba(255, 255, 255, 0.1);
}

.topic-item.completed {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
}

.topic-icon {
  font-size: 1.2rem;
}

.lesson-content {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  padding: 20px;
}

.lesson-header h4 {
  margin: 0 0 16px 0;
  color: #667eea;
}

.code-example {
  background: #1e293b;
  border-radius: 8px;
  padding: 16px;
  margin: 12px 0;
  overflow-x: auto;
}

.code-example pre {
  margin: 0;
  color: #e2e8f0;
  font-family: "JetBrains Mono", "Fira Code", monospace;
}

.output-example {
  background: #065f46;
  border-radius: 8px;
  padding: 12px;
  margin: 12px 0;
}

.output-example pre {
  margin: 0;
  color: #10b981;
  font-family: "JetBrains Mono", "Fira Code", monospace;
}

/* Practice Section */
.practice-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24px;
}

.challenge-description {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  padding: 20px;
}

.challenge-description h4 {
  margin: 0 0 12px 0;
  color: #667eea;
}

.challenge-hints {
  background: rgba(251, 191, 36, 0.1);
  border-radius: 8px;
  padding: 12px;
  margin-top: 16px;
}

.challenge-hints ul {
  margin: 8px 0 0 0;
  padding-left: 20px;
}

.code-editor-container {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  overflow: hidden;
}

.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #1e293b;
  padding: 12px 16px;
  border-bottom: 1px solid #334155;
}

.editor-actions {
  display: flex;
  gap: 8px;
}

.run-btn,
.submit-btn,
.hint-btn {
  padding: 6px 12px;
  border-radius: 6px;
  border: none;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.run-btn {
  background: #22c55e;
  color: white;
}

.submit-btn {
  background: #667eea;
  color: white;
}

.hint-btn {
  background: #f59e0b;
  color: white;
}

.run-btn:hover {
  background: #16a34a;
}
.submit-btn:hover {
  background: #5b21b6;
}
.hint-btn:hover {
  background: #d97706;
}

.code-editor {
  height: 300px;
  font-family: "JetBrains Mono", "Fira Code", monospace;
}

.output-container {
  grid-column: 1 / -1;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  overflow: hidden;
}

.output-header {
  background: #1e293b;
  padding: 12px 16px;
  border-bottom: 1px solid #334155;
  font-weight: 600;
}

.code-output {
  padding: 16px;
  min-height: 100px;
  font-family: "JetBrains Mono", "Fira Code", monospace;
}

.loading {
  color: #f59e0b;
  font-style: italic;
}

.success {
  color: #22c55e;
  font-weight: 600;
}

.output-text {
  color: #94a3b8;
  font-style: italic;
}

/* Quiz Section */
.quiz-content {
  max-width: 600px;
  margin: 0 auto;
}

.question-card {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  padding: 24px;
}

.question-card h4 {
  margin: 0 0 16px 0;
  color: #667eea;
}

.question-text {
  font-size: 1.1rem;
  margin-bottom: 16px;
  line-height: 1.6;
}

.code-snippet {
  background: #1e293b;
  border-radius: 8px;
  padding: 16px;
  margin: 16px 0;
  overflow-x: auto;
}

.code-snippet pre {
  margin: 0;
  color: #e2e8f0;
  font-family: "JetBrains Mono", "Fira Code", monospace;
}

.answer-options {
  margin: 20px 0;
}

.answer-option {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 8px;
  border: 2px solid transparent;
}

.answer-option:hover {
  background: rgba(255, 255, 255, 0.05);
}

.answer-option.selected {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
}

.answer-option input[type="radio"] {
  margin: 0;
}

.answer-option label {
  cursor: pointer;
  flex: 1;
}

.question-actions {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

.submit-answer-btn,
.next-question-btn {
  padding: 10px 20px;
  border-radius: 8px;
  border: none;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.submit-answer-btn {
  background: #667eea;
  color: white;
}

.next-question-btn {
  background: #22c55e;
  color: white;
}

.submit-answer-btn:hover {
  background: #5b21b6;
}
.next-question-btn:hover {
  background: #16a34a;
}

.answer-feedback {
  margin-top: 16px;
  padding: 12px;
  border-radius: 8px;
  background: rgba(34, 197, 94, 0.1);
  border-left: 4px solid #22c55e;
}

.explanation {
  font-size: 0.95rem;
  line-height: 1.5;
}

/* Leaderboard Section */
.leaderboard-filters {
  display: flex;
  gap: 8px;
}

.filter-btn {
  padding: 6px 12px;
  border-radius: 6px;
  border: none;
  background: rgba(255, 255, 255, 0.1);
  color: #94a3b8;
  cursor: pointer;
  transition: all 0.3s ease;
}

.filter-btn.active {
  background: #667eea;
  color: white;
}

.leaderboard-content {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 24px;
}

.user-rank {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  padding: 20px;
}

.user-rank h4 {
  margin: 0 0 12px 0;
  color: #667eea;
}

.rank-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8px;
  padding: 12px;
}

.rank-position {
  font-size: 1.2rem;
  font-weight: 700;
  color: #667eea;
}

.top-users {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 12px;
  padding: 20px;
}

.top-users h4 {
  margin: 0 0 16px 0;
  color: #22c55e;
}

.leaderboard-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.leaderboard-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border-radius: 8px;
  margin-bottom: 8px;
  background: rgba(255, 255, 255, 0.03);
}

.leaderboard-item:nth-child(1) {
  background: rgba(255, 215, 0, 0.1);
}
.leaderboard-item:nth-child(2) {
  background: rgba(192, 192, 192, 0.1);
}
.leaderboard-item:nth-child(3) {
  background: rgba(205, 127, 50, 0.1);
}

.rank {
  font-weight: 700;
  width: 30px;
}

.user {
  flex: 1;
  text-align: left;
}

.score {
  font-weight: 600;
  color: #22c55e;
}

/* Notifications */
.notification {
  position: fixed;
  top: 20px;
  right: 20px;
  padding: 12px 16px;
  border-radius: 8px;
  color: white;
  font-weight: 600;
  z-index: 1000;
  animation: slideIn 0.3s ease;
}

.notification.success {
  background: #22c55e;
}

.notification.error {
  background: #ef4444;
}

.notification.info {
  background: #3b82f6;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Animations */
#points,
#xp,
#level,
#streak {
  transition: transform 0.3s, color 0.3s;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .learning-content,
  .practice-content,
  .leaderboard-content {
    grid-template-columns: 1fr;
  }

  .dashboard-nav {
    flex-wrap: wrap;
  }
}

@media (max-width: 768px) {
  .container_header {
    flex-direction: column;
    gap: 12px;
  }

  .dashboard-nav {
    order: -1;
  }

  .profile-info {
    flex-direction: column;
    text-align: center;
  }

  .stats {
    justify-content: center;
  }

  .language-list {
    grid-template-columns: 1fr;
  }

  .section-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .code-editor {
    height: 250px;
  }
}

@media (max-width: 480px) {
  .dashboard-main {
    padding: 0 12px;
  }

  .profile-section,
  .language-section,
  .content-section {
    padding: 16px;
  }

  .stats {
    flex-direction: column;
    gap: 8px;
  }

  .editor-actions {
    flex-direction: column;
    gap: 4px;
  }
}
